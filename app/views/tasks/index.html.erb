<p id="notice"><%= notice %></p>

<h1>Listing Tasks</h1>

<table>
  <thead>
    <tr>
      <th>Task name</th>
      <th>Task time</th>
      <th>Actual time</th>
      <th>Start button</th>
      <th>Stop button</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td><%= task.task_name %></td>
        <td>Estimated <%= task.task_time_in_minutes %> minutes</td>
        <td><button onClick="countdown(<%= task.task_time_in_minutes %>)">Start</button></td>
        <td><button onClick="myStopFunction()">Stop</button></td>
        <td><%= link_to 'Show', task %></td>
        <td><%= link_to 'Edit', edit_task_path(task) %></td>
        <td><%= link_to 'Destroy', task, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

Timer:<p id = 'timer'></p>

